				</anchored>
				<disabled />
			</genericcontrol>
			<label name="total_label">
				<anchored to="rightanchor" width="48">
					<top />
					<right anchor="left" relation="relative" offset="-3" />
				</anchored>
				<center />
				<static textres="char_label_skilltotal" />
			</label>
			<label name="stat_label">
				<anchored to="rightanchor" width="50">
