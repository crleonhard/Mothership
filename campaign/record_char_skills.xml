				<anchored to="salaryframe" position="insidetopleft" offset="155,10" width="55" height="20" />
				<readonly />
			</stringcontrol>
			
			<label_frametop>
				<anchored to="unlocksframe" />
				<static textres="char_label_unlocks" />
			</label_frametop>
			<stringfield name="unlocks">
				<anchored to="unlocksframe">
					<top offset="30" />
					<left offset="15" />
					<right offset="-15" />
					<bottom offset="-15" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<nodrag />
			</stringfield>
			<scrollbar_list>
				<anchored to="unlocks" />
				<target>unlocks</target>
			</scrollbar_list>
			
		</sheetdata>
	</windowclass>

