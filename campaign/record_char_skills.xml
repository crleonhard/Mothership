				</anchored>
				<center />
				<static textres="char_label_skillstat" />
			</label>
			<label name="bonus_label">
				<anchored to="rightanchor" width="48">
					<top />
					<right anchor="left" relation="relative" offset="-3" />
				</anchored>
				<center />
				<static textres="char_label_skillbonus" />
			</label>
			<label name="name_label">
				<anchored>
					<top parent="rightanchor" />
					<!-- <left offset="35" /> -->
					<left offset="0" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
				</anchored>
				<static textres="char_label_skillname" />
				<center />
			</label>

			<windowlist name="skills">
				<anchored to="skillsframe">
					<top offset="40" />
					<left offset="15" />
					<right offset="-20" />
					<bottom offset="-15" />
				</anchored>
				<child></child>
				<child><backcolor>1A40301E</backcolor></child>
				<datasource>.skilllist</datasource>
				<class>skill_item</class>
				<allowdelete />
				<sortby><control>name</control></sortby>
				<script file="campaign/scripts/char_skilllist.lua" />
			</windowlist>
			<scrollbar>
				<anchored to="skills" />
				<target>skills</target>
			</scrollbar>

			<button_iedit name="skills_iedit">
				<anchored to="skills" position="aboveright" offset="5,10" />
				<target>skills</target>
			</button_iedit>
			<!-- <button_iadd name="skills_iadd"> -->
