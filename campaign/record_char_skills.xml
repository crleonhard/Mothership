			<frame_char name="skillsframe">
				<!-- <bounds>15,40,-29,-105</bounds> -->
				<!-- <bounds>15,0,-29,-200</bounds> -->
				<bounds>28,10,-45,-200</bounds>
			</frame_char>
			<frame_char name="salaryframe">
				<!-- <bounds>15,-200,-29,40</bounds> -->
				<bounds>28,-200,-45,40</bounds>
			</frame_char>
			<frame_char name="unlocksframe">
